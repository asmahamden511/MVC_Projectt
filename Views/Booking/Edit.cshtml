@model MVC_Projec2.Models.Booking

@{
    ViewData["Title"] = "Edit Booking";
}

<div class="edit-booking-container">
    <div class="edit-booking-card">
        <div class="edit-booking-header">
            <h2><i class="fas fa-edit"></i> @ViewData["Title"]</h2>
        </div>

        <div class="edit-booking-body">
            <form asp-action="Edit" class="edit-booking-form">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                <input type="hidden" asp-for="Id" />

                <div class="form-section">
                    <h3>Main Services</h3>
                    <div class="form-row">
                        <div class="form-group">
                            <label asp-for="Hall_Id" class="form-label">Hall</label>
                            <div class="select-wrapper">
                                <select asp-for="Hall_Id" class="form-control" asp-items="ViewBag.Hall_Id">
                                    <option value="">Select Hall</option>
                                </select>
                                <i class="fas fa-chevron-down"></i>
                            </div>
                            <span asp-validation-for="Hall_Id" class="validation-message"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Session_Id" class="form-label">Session</label>
                            <div class="select-wrapper">
                                <select asp-for="Session_Id" class="form-control" asp-items="ViewBag.Session_Id">
                                    <option value="">Select Session</option>
                                </select>
                                <i class="fas fa-chevron-down"></i>
                            </div>
                            <span asp-validation-for="Session_Id" class="validation-message"></span>
                        </div>
                    </div>
                </div>

                <div class="form-section">
                    <h3>Additional Services</h3>
                    <div class="form-row">
                        <div class="form-group">
                            <label asp-for="Atelier_Id" class="form-label">Atelier</label>
                            <div class="select-wrapper">
                                <select asp-for="Atelier_Id" class="form-control" asp-items="ViewBag.Atelier_Id">
                                    <option value="">Select Atelier</option>
                                </select>
                                <i class="fas fa-chevron-down"></i>
                            </div>
                            <span asp-validation-for="Atelier_Id" class="validation-message"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="MakeupId" class="form-label">Makeup Service</label>
                            <div class="select-wrapper">
                                <select asp-for="MakeupId" class="form-control" asp-items="ViewBag.MakeupId">
                                    <option value="">Select Makeup</option>
                                </select>
                                <i class="fas fa-chevron-down"></i>
                            </div>
                            <span asp-validation-for="MakeupId" class="validation-message"></span>
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-group">
                            <label asp-for="Decor_Id" class="form-label">Decor Style</label>
                            <div class="select-wrapper">
                                <select asp-for="Decor_Id" class="form-control" asp-items="ViewBag.Decor_Id">
                                    <option value="">Select Decor</option>
                                </select>
                                <i class="fas fa-chevron-down"></i>
                            </div>
                            <span asp-validation-for="Decor_Id" class="validation-message"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Status" class="form-label">Status</label>
                            <div class="select-wrapper">
                                <select asp-for="Status" class="form-control">
                                    <option value="Pending">Pending</option>
                                    <option value="Confirmed">Confirmed</option>
                                    <option value="Cancelled">Cancelled</option>
                                </select>
                                <i class="fas fa-chevron-down"></i>
                            </div>
                            <span asp-validation-for="Status" class="validation-message"></span>
                        </div>
                    </div>
                </div>

                <div class="form-section">
                    <h3>User Information</h3>
                    <div class="form-row">
                        <div class="form-group">
                            <label asp-for="user_id" class="form-label">User</label>
                            <div class="select-wrapper">
                                <select asp-for="user_id" class="form-control" asp-items="ViewBag.user_id">
                                    <option value="">Select User</option>
                                </select>
                                <i class="fas fa-chevron-down"></i>
                            </div>
                            <span asp-validation-for="user_id" class="validation-message"></span>
                        </div>
                    </div>
                </div>

                <div class="form-actions">
                    <button type="submit" class="btn btn-save">
                        <i class="fas fa-save"></i> Save Changes
                    </button>
                    <a asp-action="Index" class="btn btn-cancel">
                        <i class="fas fa-times"></i> Cancel
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .edit-booking-container {
            max-width: 900px;
            margin: 2rem auto;
            padding: 0 1rem;
        }

        .edit-booking-card {
            background: white;
            border-radius: 8px;
            box-shadow: 0 2px 15px rgba(0,0,0,0.1);
            overflow: hidden;
        }

        .edit-booking-header {
            background: #007bff;
            color: white;
            padding: 1.5rem;
            text-align: center;
        }

            .edit-booking-header h2 {
                margin: 0;
                font-weight: 600;
                display: flex;
                align-items: center;
                justify-content: center;
                gap: 0.5rem;
            }

        .edit-booking-body {
            padding: 2rem;
        }

        .edit-booking-form {
            display: flex;
            flex-direction: column;
            gap: 1.5rem;
        }

        .form-section {
            background: #f8f9fa;
            border-radius: 8px;
            padding: 1.5rem;
        }

            .form-section h3 {
                color: #333;
                margin-bottom: 1.5rem;
                font-size: 1.2rem;
                font-weight: 600;
            }

        .form-row {
            display: flex;
            gap: 1.5rem;
            margin-bottom: 1rem;
        }

        .form-group {
            flex: 1;
            margin-bottom: 1rem;
        }

        .form-label {
            display: block;
            margin-bottom: 0.5rem;
            font-weight: 500;
            color: #444;
        }

        .select-wrapper {
            position: relative;
        }

        .form-control {
            width: 100%;
            padding: 0.75rem;
            border: 1px solid #ddd;
            border-radius: 4px;
            background: white;
            appearance: none;
            font-size: 1rem;
        }

        .select-wrapper i {
            position: absolute;
            right: 1rem;
            top: 50%;
            transform: translateY(-50%);
            color: #666;
            pointer-events: none;
        }

        .validation-message {
            color: #e74c3c;
            font-size: 0.85rem;
            margin-top: 0.25rem;
            display: block;
        }

        .form-actions {
            display: flex;
            justify-content: flex-end;
            gap: 1rem;
            margin-top: 1.5rem;
        }

        .btn {
            padding: 0.75rem 1.5rem;
            border-radius: 6px;
            font-weight: 500;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            cursor: pointer;
            transition: all 0.2s;
            border: none;
        }

        .btn-save {
            background: #28a745;
            color: white;
        }

            .btn-save:hover {
                background: #218838;
            }

        .btn-cancel {
            background: #6c757d;
            color: white;
        }

            .btn-cancel:hover {
                background: #5a6268;
            }

        .alert-danger {
            background: #fdecea;
            color: #d32f2f;
            padding: 1rem;
            border-radius: 4px;
            margin-bottom: 1.5rem;
        }

        @@media (max-width: 768px) {
            .edit-booking-body {
                padding: 1.5rem;
            }

            .form-row {
                flex-direction: column;
                gap: 1rem;
            }

            .form-actions {
                flex-direction: column;
            }

            .btn {
                width: 100%;
                justify-content: center;
            }
        }
    </style>
}

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        // Enhance select elements
        document.querySelectorAll('select').forEach(select => {
            select.addEventListener('focus', function() {
                this.style.borderColor = '#007bff';
                this.parentNode.querySelector('i').style.color = '#007bff';
            });

            select.addEventListener('blur', function() {
                this.style.borderColor = '#ddd';
                this.parentNode.querySelector('i').style.color = '#666';
            });
        });
    </script>
}