@model MVC_Projec2.Models.Booking

@{
    ViewData["Title"] = "Booking Details";
}

<div class="booking-details-container">
    <div class="booking-details-card">
        <div class="booking-details-header">
            <h2><i class="fas fa-calendar-check"></i> @ViewData["Title"]</h2>
        </div>

        <div class="booking-details-body">
            <div class="booking-info">
                <div class="info-section">
                    <h3>Booking Information</h3>
                    <div class="info-row">
                        <span class="info-label">Booking ID:</span>
                        <span class="info-value">@Model.Id</span>
                    </div>
                    <div class="info-row">
                        <span class="info-label">Status:</span>
                        <span class="info-value status-badge @(Model.Status?.ToLower() == "pending" ? "status-pending" : "status-confirmed")">
                            @Model.Status
                        </span>
                    </div>
                </div>

                <div class="info-section">
                    <h3>Service Details</h3>
                    <div class="info-row">
                        <span class="info-label">Hall:</span>
                        <span class="info-value">@Model.Hall?.Name</span>
                    </div>
                    <div class="info-row">
                        <span class="info-label">Session:</span>
                        <span class="info-value">@Model.Session?.Name</span>
                    </div>
                    <div class="info-row">
                        <span class="info-label">Atelier:</span>
                        <span class="info-value">@(Model.Atelier?.Name ?? "Not selected")</span>
                    </div>
                    <div class="info-row">
                        <span class="info-label">Makeup:</span>
                        <span class="info-value">@(Model.MakeUp?.Name ?? "Not selected")</span>
                    </div>
                    <div class="info-row">
                        <span class="info-label">Decor:</span>
                        <span class="info-value">@(Model.Decor?.Style ?? "Not selected")</span>
                    </div>
                </div>
            </div>

            <div class="booking-actions">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-edit">
                    <i class="fas fa-edit"></i> Edit Booking
                </a>
                <a asp-action="Index" class="btn btn-back">
                    <i class="fas fa-arrow-left"></i> Back to List
                </a>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .booking-details-container {
            max-width: 800px;
            margin: 2rem auto;
            padding: 0 1rem;
            margin-top: 6rem;
        }

        .booking-details-card {
            background: white;
            border-radius: 8px;
            box-shadow: 0 2px 15px rgba(0,0,0,0.1);
            overflow: hidden;
        }

        .booking-details-header {
            background: #6cad7f;
            color: white;
            padding: 1.5rem;
            text-align: center;
        }

            .booking-details-header h2 {
                margin: 0;
                font-weight: 600;
                display: flex;
                align-items: center;
                justify-content: center;
                gap: 0.5rem;
            }

        .booking-details-body {
            padding: 2rem;
        }

        .booking-info {
            margin-bottom: 2rem;
        }

        .info-section {
            margin-bottom: 1.5rem;
        }

            .info-section h3 {
                color: #333;
                border-bottom: 1px solid #eee;
                padding-bottom: 0.5rem;
                margin-bottom: 1rem;
            }

        .info-row {
            display: flex;
            margin-bottom: 0.75rem;
        }

        .info-label {
            font-weight: 500;
            color: #555;
            min-width: 120px;
        }

        .info-value {
            color: #333;
        }

        .status-badge {
            display: inline-block;
            padding: 0.25rem 0.75rem;
            border-radius: 1rem;
            font-weight: 500;
            font-size: 0.9rem;
        }

        .status-pending {
            background-color: #fff3cd;
            color: #856404;
        }

        .status-confirmed {
            background-color: #d4edda;
            color: #155724;
        }

        .booking-actions {
            display: flex;
            gap: 1rem;
            justify-content: center;
            margin-top: 2rem;
        }

        .btn {
            padding: 0.75rem 1.5rem;
            border-radius: 6px;
            font-weight: 500;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            cursor: pointer;
            transition: all 0.2s;
            text-decoration: none;
        }

        .btn-edit {
            background: #007bff;
            color: white;
            border: none;
        }

            .btn-edit:hover {
                background: #0069d9;
            }

        .btn-back {
            background: #6c757d;
            color: white;
            border: none;
        }

            .btn-back:hover {
                background: #5a6268;
            }

        @@media (max-width: 768px) {
            .booking-details-body {
                padding: 1.5rem;
            }

            .info-row {
                flex-direction: column;
                gap: 0.25rem;
            }

            .info-label {
                min-width: auto;
            }

            .booking-actions {
                flex-direction: column;
            }

            .btn {
                width: 100%;
                justify-content: center;
            }
        }
    </style>
}