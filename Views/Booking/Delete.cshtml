@model MVC_Projec2.Models.Booking

@{
    ViewData["Title"] = "Delete Booking";
}

<div class="delete-booking-container">
    <div class="delete-booking-card">
        <div class="delete-booking-header">
            <h2><i class="fas fa-exclamation-triangle"></i> @ViewData["Title"]</h2>
        </div>

        <div class="delete-booking-body">
            <div class="delete-warning">
                <i class="fas fa-exclamation-circle"></i>
                <h3>Are you sure you want to delete this booking?</h3>
                <p>This action cannot be undone.</p>
            </div>

            <div class="booking-details">
                <div class="detail-section">
                    <h4>Booking Information</h4>
                    <div class="detail-row">
                        <span class="detail-label">Status:</span>
                        <span class="detail-value @(Model.Status?.ToLower() == "pending" ? "status-pending" : "status-confirmed")">
                            @Model.Status
                        </span>
                    </div>
                    <div class="detail-row">
                        <span class="detail-label">Created At:</span>
                        <span class="detail-value">@Model.Created_at.ToString("yyyy-MM-dd HH:mm")</span>
                    </div>
                </div>

                <div class="detail-section">
                    <h4>Service Details</h4>
                    <div class="detail-row">
                        <span class="detail-label">Hall:</span>
                        <span class="detail-value">@Model.Hall?.Name (ID: @Model.Hall?.Id)</span>
                    </div>
                    <div class="detail-row">
                        <span class="detail-label">Session:</span>
                        <span class="detail-value">@Model.Session?.Name (ID: @Model.Session?.Id)</span>
                    </div>
                    <div class="detail-row">
                        <span class="detail-label">Atelier:</span>
                        <span class="detail-value">@(Model.Atelier?.Name ?? "None") @(Model.Atelier != null ? $"(ID: {Model.Atelier.Id})" : "")</span>
                    </div>
                    <div class="detail-row">
                        <span class="detail-label">MakeUp:</span>
                        <span class="detail-value">@(Model.MakeUp?.Name ?? "None") @(Model.MakeUp != null ? $"(ID: {Model.MakeUp.Id})" : "")</span>
                    </div>
                    <div class="detail-row">
                        <span class="detail-label">Decor:</span>
                        <span class="detail-value">@(Model.Decor?.Style ?? "None") @(Model.Decor != null ? $"(ID: {Model.Decor.Id})" : "")</span>
                    </div>
                </div>

                <div class="detail-section">
                    <h4>User Information</h4>
                    <div class="detail-row">
                        <span class="detail-label">User Name:</span>
                        <span class="detail-value">@Model.user?.UserName</span>
                    </div>
                </div>
            </div>

            <form asp-action="Delete" class="delete-form">
                <input type="hidden" asp-for="Id" />
                <div class="form-actions">
                    <button type="submit" class="btn btn-delete">
                        <i class="fas fa-trash"></i> Confirm Delete
                    </button>
                    <a asp-action="Index" class="btn btn-cancel">
                        <i class="fas fa-arrow-left"></i> Cancel
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .delete-booking-container {
            max-width: 800px;
            margin: 2rem auto;
            margin-top: 6rem;
            padding: 0 1rem;
        }

        .delete-booking-card {
            background: white;
            border-radius: 8px;
            box-shadow: 0 2px 15px rgba(0,0,0,0.1);
            overflow: hidden;
            border: 1px solid #e0e0e0;
        }

        .delete-booking-header {
            background: #6cad7f;
            color: white;
            padding: 1.5rem;
            text-align: center;
        }

            .delete-booking-header h2 {
                margin: 0;
                font-weight: 600;
                display: flex;
                align-items: center;
                justify-content: center;
                gap: 0.5rem;
            }

        .delete-booking-body {
            padding: 2rem;
        }

        .delete-warning {
            background: #fff3f3;
            border-left: 4px solid #dc3545;
            padding: 1rem;
            margin-bottom: 2rem;
            display: flex;
            align-items: center;
            gap: 1rem;
        }

            .delete-warning i {
                color: #dc3545;
                font-size: 1.5rem;
            }

            .delete-warning h3 {          
                margin: 0;
                color: #dc3545;
            }

            .delete-warning p {
                margin: 0.5rem 0 0;
                color: #dc3545;
                ;
            }

        .booking-details {
            margin-bottom: 2rem;
        }

        .detail-section {
            margin-bottom: 1.5rem;
        }

            .detail-section h4 {
                color: #333;
                border-bottom: 1px solid #eee;
                padding-bottom: 0.5rem;
                margin-bottom: 1rem;
            }

        .detail-row {
            display: flex;
            margin-bottom: 0.75rem;
        }

        .detail-label {
            font-weight: 500;
            color: #555;
            min-width: 120px;
        }

        .detail-value {
            color: #333;
        }

        .status-pending {
            color: #856404;
            background: #fff3cd;
            padding: 0.25rem 0.5rem;
            border-radius: 4px;
            font-weight: 500;
        }

        .status-confirmed {
            color: #155724;
            background: #d4edda;
            padding: 0.25rem 0.5rem;
            border-radius: 4px;
            font-weight: 500;
        }

        .delete-form {
            margin-top: 2rem;
        }

        .form-actions {
            display: flex;
            gap: 1rem;
            justify-content: flex-end;
        }

        .btn {
            padding: 0.75rem 1.5rem;
            border-radius: 6px;
            font-weight: 500;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            cursor: pointer;
            transition: all 0.2s;
        }

        .btn-delete {
            background: #dc3545;
            color: white;
            border: none;
        }

            .btn-delete:hover {
                background: #c82333;
            }

        .btn-cancel {
            background: #6c757d;
            color: white;
            border: none;
        }

            .btn-cancel:hover {
                background: #5a6268;
            }

        @@media (max-width: 768px) {
            .delete-booking-body {
                padding: 1.5rem;
            }

            .detail-row {
                flex-direction: column;
                gap: 0.25rem;
            }

            .detail-label {
                min-width: auto;
            }

            .form-actions {
                flex-direction: column;
            }

            .btn {
                width: 100%;
                justify-content: center;
            }
        }
    </style>
}